<% layout('layout') %>

<div class="bg-white shadow rounded-lg p-6">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Available Properties</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% properties.forEach(property => { %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200 hover:shadow-lg transition duration-300">
        <% if (property.images && property.images.length > 0) { %>
          <img src="/uploads/<%= property.images[0] %>" alt="<%= property.title %>" class="w-full h-48 object-cover">
        <% } else { %>
          <img src="https://via.placeholder.com/400x300" alt="Property" class="w-full h-48 object-cover">
        <% } %>
        <div class="p-4">
          <h3 class="text-lg font-semibold text-gray-800"><%= property.title %></h3>
          <p class="text-gray-600 mt-1"><%= property.location %></p>
          <p class="text-blue-600 font-bold mt-2">$<%= property.price.toLocaleString() %></p>
          <div class="flex justify-between items-center mt-4">
            <% if (property.bedrooms) { %>
              <span class="text-sm text-gray-500"><i class="fas fa-bed mr-1"></i> <%= property.bedrooms %> Beds</span>
            <% } %>
            <% if (property.bathrooms) { %>
              <span class="text-sm text-gray-500"><i class="fas fa-bath mr-1"></i> <%= property.bathrooms %> Baths</span>
            <% } %>
            <% if (property.area) { %>
              <span class="text-sm text-gray-500"><i class="fas fa-ruler-combined mr-1"></i> <%= property.area %> sqft</span>
            <% } %>
          </div>
          <a href="/user/properties/<%= property._id %>" class="block mt-4 bg-blue-500 hover:bg-blue-600 text-white text-center py-2 rounded-lg transition duration-300">
            View Details
          </a>
        </div>
      </div>
    <% }) %>
  </div>
</div>