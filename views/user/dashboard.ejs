<% layout('layout') %>

<div class="bg-white shadow rounded-lg p-6">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Welcome, <%= user.username %></h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="bg-blue-50 p-6 rounded-lg">
      <h2 class="text-lg font-semibold text-gray-700 mb-2">Your Properties</h2>
      <p class="text-3xl font-bold text-blue-600">3</p>
      <a href="/user/properties" class="text-blue-500 hover:text-blue-700 mt-2 inline-block">View all</a>
    </div>
    
    <div class="bg-green-50 p-6 rounded-lg">
      <h2 class="text-lg font-semibold text-gray-700 mb-2">Available Properties</h2>
      <p class="text-3xl font-bold text-green-600">18</p>
      <a href="/user/properties" class="text-green-500 hover:text-green-700 mt-2 inline-block">Browse properties</a>
    </div>
  </div>
  
  <div class="mt-8">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">Recent Properties</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Sample property cards -->
      <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200">
        <img src="https://via.placeholder.com/400x300" alt="Property" class="w-full h-48 object-cover">
        <div class="p-4">
          <h3 class="text-lg font-semibold text-gray-800">Modern Apartment</h3>
          <p class="text-gray-600 mt-1">New York, NY</p>
          <p class="text-blue-600 font-bold mt-2">$1,200,000</p>
          <div class="flex justify-between items-center mt-4">
            <span class="text-sm text-gray-500"><i class="fas fa-bed mr-1"></i> 3 Beds</span>
            <span class="text-sm text-gray-500"><i class="fas fa-bath mr-1"></i> 2 Baths</span>
            <span class="text-sm text-gray-500"><i class="fas fa-ruler-combined mr-1"></i> 1800 sqft</span>
          </div>
          <a href="/user/properties/1" class="block mt-4 bg-blue-500 hover:bg-blue-600 text-white text-center py-2 rounded-lg transition duration-300">
            View Details
          </a>
        </div>
      </div>
      <!-- Repeat for more properties -->
    </div>
  </div>
</div>